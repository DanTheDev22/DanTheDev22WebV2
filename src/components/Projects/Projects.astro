---
import './Projects.scss'
---

<section class="projects container" id="projects-section">
    <div class="projects__header">
        <div class="projects__header-line"></div>
        <span class="projects__header-label">Featured Work</span>
    </div>

    <div class="projects__container">
        <div class="projects__images">
            <div class="project-image" data-index="0">
                <div class="project-image__bg">
                    <div class="project-image__placeholder">
                        <i data-lucide="shopping-cart" class="project-image__icon"></i>
                    </div>
                </div>
                <div class="project-image__overlay"></div>
            </div>

            <div class="project-image" data-index="1">
                <div class="project-image__bg">
                    <div class="project-image__placeholder">
                        <i data-lucide="check-square" class="project-image__icon"></i>
                    </div>
                </div>
                <div class="project-image__overlay"></div>
            </div>

            <div class="project-image" data-index="2">
                <div class="project-image__bg">
                    <div class="project-image__placeholder">
                        <i data-lucide="monitor" class="project-image__icon"></i>
                    </div>
                </div>
                <div class="project-image__overlay"></div>
            </div>
        </div>

        <div class="projects__content">
            <div class="projects__info" id="project-info-container">
                <div class="projects__title-wrapper">
                    <div class="projects__title-line"></div>
                    <h3 id="proj-title" class="projects__title">E-Commerce Platform</h3>
                </div>

                <p id="proj-desc" class="projects__description">
                    Full-stack online store with payment integration and admin dashboard. Scalable architecture handling thousands of SKUs.
                </p>

                <div id="proj-tags" class="projects__tags">
                    <span class="projects__tag">React</span>
                    <span class="projects__tag">Spring Boot</span>
                    <span class="projects__tag">PostgreSQL</span>
                </div>

                <div class="projects__actions">
                    <a href="#" class="projects__button projects__button--primary">
                        View Project
                        <i data-lucide="arrow-up-right" class="projects__button-icon"></i>
                    </a>
                    <a href="#" class="projects__button projects__button--secondary">Live Demo</a>
                </div>
            </div>
        </div>

        <!-- Mobile Projects -->
        <div class="projects__mobile visible-mobile">
            <div class="project-mobile">
                <div class="project-mobile__image">
                    <div class="project-mobile__bg">
                        <i data-lucide="shopping-cart" class="project-mobile__icon"></i>
                    </div>
                </div>
                <div class="project-mobile__content">
                    <h3 class="project-mobile__title">E-Commerce Platform</h3>
                    <p class="project-mobile__description">Full-stack online store with payment integration and admin dashboard. Scalable architecture.</p>
                    <div class="project-mobile__tags">
                        <span class="projects__tag">React</span>
                        <span class="projects__tag">Spring Boot</span>
                        <span class="projects__tag">PostgreSQL</span>
                    </div>
                </div>
            </div>

            <div class="project-mobile">
                <div class="project-mobile__image">
                    <div class="project-mobile__bg">
                        <i data-lucide="check-square" class="project-mobile__icon"></i>
                    </div>
                </div>
                <div class="project-mobile__content">
                    <h3 class="project-mobile__title">Task Management App</h3>
                    <p class="project-mobile__description">Collaborative project management tool with real-time updates and team analytics features.</p>
                    <div class="project-mobile__tags">
                        <span class="projects__tag">React</span>
                        <span class="projects__tag">Java</span>
                        <span class="projects__tag">REST</span>
                    </div>
                </div>
            </div>

            <div class="project-mobile">
                <div class="project-mobile__image">
                    <div class="project-mobile__bg">
                        <i data-lucide="monitor" class="project-mobile__icon"></i>
                    </div>
                </div>
                <div class="project-mobile__content">
                    <h3 class="project-mobile__title">Portfolio Website</h3>
                    <p class="project-mobile__description">Modern, responsive portfolio with smooth 3D animations and high-performance optimizations.</p>
                    <div class="project-mobile__tags">
                        <span class="projects__tag">TypeScript</span>
                        <span class="projects__tag">Tailwind</span>
                        <span class="projects__tag">React</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import {Projects} from './Projects';
    const instance = Projects.init();

    document.addEventListener('astro:before-swap', () => {
        instance?.destroy();
    });
</script>